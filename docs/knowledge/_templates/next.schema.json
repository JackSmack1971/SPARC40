{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Next Cursor",
  "type": "object",
  "required": [
    "handoffToken",
    "currentIndex",
    "next",
    "updatedAt"
  ],
  "properties": {
    "handoffToken": {
      "type": "string"
    },
    "currentIndex": {
      "type": "integer"
    },
    "next": {
      "type": "object",
      "required": [
        "slug",
        "reason",
        "inputs",
        "expectedOutputs",
        "qualityGates"
      ],
      "properties": {
        "slug": {
          "type": "string"
        },
        "reason": {
          "type": "string"
        },
        "inputs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "expectedOutputs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "qualityGates": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "planHash": {
      "type": "string"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  }
}